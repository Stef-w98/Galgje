<Window x:Class="Galgje.Menu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Galgje"
        mc:Ignorable="d"
       Title="Main Menu" MinHeight="500" Height="500" MinWidth="800" Width="800">
    <Grid Name="kleur2" Background="#FF2F2F2F">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="17*"/>
            <ColumnDefinition Width="0*"/>
            <ColumnDefinition Width="0*"/>
            <ColumnDefinition Width="143*"/>
        </Grid.ColumnDefinitions>
        <StackPanel Height="300" Width="auto" Margin="75,92,160,92" Grid.Column="1" Grid.ColumnSpan="3">
            <Label Height="80" Width="240" Foreground="White" FontSize="48">Spel Mode</Label>
            <Button Name="btnSinglePlayer" HorizontalAlignment="Left" Margin="50, 50, 0, 0"  Height="80px" Width="160px" Click="buttonSinglePlayer_Click" Content="Single Player"/>
            <Button Name="btnMultiPlayer" HorizontalAlignment="Right" Margin="0, -80, 50, 0"  Height="80px" Width="160px" Click="buttonMultiPlayer_Click" Content="Multi Player"/>
        </StackPanel>
    </Grid>
</Window>
